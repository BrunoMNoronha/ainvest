{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ainvest.app/schemas/Candle.json",
  "title": "Candle",
  "description": "Dados OHLCV (candlestick) de um período",
  "type": "object",
  "required": ["date", "open", "high", "low", "close"],
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "description": "Data do candle (YYYY-MM-DD)",
      "examples": ["2026-01-02", "2026-01-03"]
    },
    "open": {
      "type": "number",
      "description": "Preço de abertura do período",
      "minimum": 0,
      "examples": [35.20, 35.50]
    },
    "high": {
      "type": "number",
      "description": "Preço máximo do período",
      "minimum": 0,
      "examples": [35.80, 36.10]
    },
    "low": {
      "type": "number",
      "description": "Preço mínimo do período",
      "minimum": 0,
      "examples": [34.90, 35.30]
    },
    "close": {
      "type": "number",
      "description": "Preço de fechamento do período",
      "minimum": 0,
      "examples": [35.50, 36.00]
    },
    "volume": {
      "type": "integer",
      "description": "Volume financeiro negociado no período",
      "minimum": 0,
      "examples": [42000000, 38000000]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "date": "2026-01-02",
      "open": 35.20,
      "high": 35.80,
      "low": 34.90,
      "close": 35.50,
      "volume": 42000000
    }
  ]
}
