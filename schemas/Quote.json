{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ainvest.app/schemas/Quote.json",
  "title": "Quote",
  "description": "Cotação de um ativo da B3",
  "type": "object",
  "required": ["symbol", "name", "price"],
  "properties": {
    "symbol": {
      "type": "string",
      "description": "Símbolo do ativo (ticker)",
      "pattern": "^[A-Z]{4}[0-9]{1,2}$",
      "examples": ["PETR4", "VALE3", "BOVA11"]
    },
    "name": {
      "type": "string",
      "description": "Nome completo do ativo",
      "minLength": 1,
      "maxLength": 100,
      "examples": ["PETROBRAS PN", "VALE ON NM"]
    },
    "price": {
      "type": "number",
      "description": "Preço atual do ativo",
      "minimum": 0,
      "examples": [38.50, 68.20]
    },
    "change": {
      "type": "number",
      "description": "Variação absoluta em relação ao fechamento anterior",
      "examples": [0.75, -0.80]
    },
    "changePercent": {
      "type": "number",
      "description": "Variação percentual em relação ao fechamento anterior",
      "examples": [1.98, -1.16]
    },
    "volume": {
      "type": "integer",
      "description": "Volume financeiro negociado no dia",
      "minimum": 0,
      "examples": [45000000, 32000000]
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Data e hora da última atualização (ISO 8601)",
      "examples": ["2026-02-03T17:00:00Z"]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "symbol": "PETR4",
      "name": "PETROBRAS PN",
      "price": 38.50,
      "change": 0.75,
      "changePercent": 1.98,
      "volume": 45000000,
      "updatedAt": "2026-02-03T17:00:00Z"
    }
  ]
}
